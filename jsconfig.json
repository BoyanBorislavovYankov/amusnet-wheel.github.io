{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES6",
        "checkJs": true,
        "lib": [
            "DOM",
            "ES2021",
            "DOM.Iterable"
        ],
        "paths": {
            "@lit": [
                "./node_modules/lit-html/lit-html"
            ],
            "@lit/*": [
                "./node_modules/lit-html/*"
            ],
            "@page": [
                "./node_modules/page/page.mjs"
            ],
        }
    },
    "include": [
        "src/**/*"
    ]
}